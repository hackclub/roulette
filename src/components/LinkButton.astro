---
import InlineArrow from '../components/InlineArrow.astro';

const { href = "#", newpage = false, arrow = false, backarrow=false, onclick="", class: className, disabled = false } = Astro.props;

const buttonClass = `button linkbutton ${disabled ? 'disabled' : ''} ${className || ''}`.trim();
---

<a class={buttonClass} href={disabled ? "#" : href} target={newpage ? "_blank" : "_self"} onclick={disabled ? "" : onclick}>
  {backarrow ? <InlineArrow reversed /> : ""}<slot />{arrow ? <InlineArrow /> : ""}
</a>

<style>
.button {
	margin: 32px 0;
	box-sizing: border-box;
	position: relative;
	background-color: var(--pink);
	color: var(--black);
	text-decoration: none;

	 border-radius: 16px;
	 padding: 8px 24px;

	 box-shadow:
	 6px 4px 0 0px var(--black),
	 8px 2px 0 0px var(--pink),
	 8px 6px 0 0px var(--pink),
	 6px 6px 0 0px var(--pink);

	 left: 0px;
	 top: 0px;

	 transition: 0.05s ease-in-out;

	 alignment-baseline: middle;

	}


	.button:hover {
		box-shadow: none;
		left: 8px;
		top: 6px;

	}

	.button.disabled {
		opacity: 0.5;
		cursor: not-allowed;
		pointer-events: none;
	}

	.button.disabled:hover {
		box-shadow:
		6px 4px 0 0px var(--black),
		8px 2px 0 0px var(--pink),
		8px 6px 0 0px var(--pink),
		6px 6px 0 0px var(--pink);
		left: 0px;
		top: 0px;
	}
</style>
